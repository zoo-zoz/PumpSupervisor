  "register_types": {
    "holding": {
      "function_code": "03/06/16",
      "description": "保持寄存器（可读写）",
      "data_unit": "register",
      "register_size": 16
    },
    "input": {
      "function_code": "04",
      "description": "输入寄存器（只读）",
      "data_unit": "register",
      "register_size": 16
    },
    "coil": {
      "function_code": "01/05/15",
      "description": "线圈（可读写的位）",
      "data_unit": "bit",
      "register_size": 1
    },
    "discrete_input": {
      "function_code": "02",
      "description": "离散输入（只读的位）",
      "data_unit": "bit",
      "register_size": 1
    }
  },

  "data_types": {
    "bit": {
      "size": 1,
      "description": "单个位，用于 coil 和 discrete_input 类型，值为 0 或 1",
      "applicable_register_types": [ "coil", "discrete_input" ]
    },
    "float32": {
      "size": 2,
      "description": "32位浮点数，占用2个寄存器",
      "applicable_register_types": [ "holding", "input" ]
    },
    "uint16": {
      "size": 1,
      "description": "16位无符号整数，可用于普通数值、布尔值(0/1)、枚举、位域",
      "applicable_register_types": [ "holding", "input" ]
    },
    "uint32": {
      "size": 2,
      "description": "32位无符号整数，占用2个寄存器",
      "applicable_register_types": [ "holding", "input" ]
    },
    "int16": {
      "size": 1,
      "description": "16位有符号整数",
      "applicable_register_types": [ "holding", "input" ]
    },
    "int32": {
      "size": 2,
      "description": "32位有符号整数，占用2个寄存器",
      "applicable_register_types": [ "holding", "input" ]
    },
    "string": {
      "size": "variable",
      "description": "字符串，根据address数组长度确定",
      "applicable_register_types": [ "holding", "input" ]
    }
  },

  "parameter_extensions": {
    "bit_map": "位映射，将uint16的每一位解析为独立的布尔属性，key为位索引(0-15)",
    "enum_map": "枚举映射，将uint16的数值映射为文本描述，key为数值",
    "range": "数值范围限制，包含min和max字段",
    "on_change": "值变化触发器，当参数值与上次采集值不同时触发变化事件"
  },

  "byte_orders": {
    "AB": "16位寄存器，高字节在前（仅用于单个寄存器）",
    "BA": "16位寄存器，低字节在前（仅用于单个寄存器）",
    "ABCD": "Big Endian (Motorola) - 32位数据，高位字在前，每个字内高字节在前",
    "DCBA": "Little Endian (Intel) - 32位数据，低位字在前，每个字内低字节在前",
    "BADC": "Big Endian with byte swap - 32位数据，高位字在前，但每个字内字节互换",
    "CDAB": "Little Endian with byte swap - 32位数据，低位字在前，但每个字内字节互换"
  },

  "connection_parameters": {
    "close_connection_after_gathering": {
      "type": "boolean",
      "default": false,
      "description": "是否在每次采集后关闭连接",
      "values": {
        "true": "每次完成数据采集后立即关闭连接，下次采集时重新建立。适用于需要限制并发连接数或与连接管理严格的设备通信。",
        "false": "保持持久连接，重复使用同一连接进行周期性采集。推荐设置，可减少连接开销，提高通信效率。"
      }
    },
    "pause_after_connect": {
      "type": "duration",
      "default": "20ms",
      "description": "连接建立后的等待时间",
      "note": "允许 Modbus 从站（PLC、传感器等）在连接建立后有足够时间初始化并准备好处理请求。某些设备在连接建立后立即发送请求可能会失败或返回错误数据。",
      "recommendations": {
        "TCP": "通常 20-50ms 足够",
        "RTU": "串口设备可能需要 50-100ms，特别是低波特率时",
        "slow_devices": "老旧设备或响应慢的设备可能需要 100-200ms"
      }
    }
  },

  "read_blocks": {
    "description": "精确控制寄存器读取范围",
    "usage": "在 device 级别必须配置 read_blocks 数组，精确控制每次读取的起始地址和数量",
    "format": {
      "start": "起始地址（整数）",
      "count": "读取的寄存器/位数量（整数）",
      "comment": "可选注释，说明该块的用途"
    },
    "rules": [
      "每个 device 必须配置 read_blocks",
      "所有参数的地址必须在某个 read_block 的范围内",
      "对于 holding/input 寄存器，count 表示寄存器数量（每个寄存器16位）",
      "对于 coil/discrete_input，count 表示位数量",
      "建议合并地址连续的参数到同一个 block 中，减少 Modbus 请求次数",
      "如果参数地址不连续且间隔较大，应分成多个 block"
    ],
    "example": [
      {
        "start": 0,
        "count": 10,
        "comment": "传感器数据 (地址 0-9)"
      },
      {
        "start": 100,
        "count": 20,
        "comment": "状态寄存器 (地址 100-119)"
      }
    ],
    "best_practices": {
      "合并策略": "如果两组参数地址间隔小于10个寄存器，建议合并成一个 block",
      "拆分策略": "如果间隔大于20个寄存器，建议拆分成多个 block",
