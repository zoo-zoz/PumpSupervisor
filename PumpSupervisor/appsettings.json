{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Wolverine": "Warning",
        "Wolverine.Runtime": "Warning",
        "Wolverine.Tracking": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/error-.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Warning"
        }
      },
      //{
      //  "Name": "File",
      //  "Args": {
      //    "path": "logs/startup-.txt",
      //    "rollingInterval": "Day",
      //    "restrictedToMinimumLevel": "Information",
      //    "retainedFileCountLimit": 7
      //  }
      //},
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          "apiKey": null,
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AppSettings": {
    "ServiceName": "PumpSupervisor"
  },
  "ApiSettings": {
    "Port": 5100,
    "EnableSwagger": true,
    "EnableCors": true,
    "SwaggerTitle": "泵控系统 API",
    "SwaggerVersion": "v1"
  },
  "InfluxDb": {
    "Url": "http://192.168.5.238:8086",
    "Token": "oeF6eS31L7-d9KTiQJfkmxso65ZnNFN_SQewcaT-UOHEvjsV2s-vVAoypD4PnJXd7csVH8HzbBlIrcWv22w8Yg==",
    "Bucket": "nbTest",
    "Org": "nbcb"
  },
  "Mqtt": {
    "Broker": "192.168.5.238",
    "Port": 1883,
    "ClientId": "PumpSupervisor",
    "BaseTopic": "pump/data",
    "Username": "nbcb",
    "Password": "nbcb"
  },
  "OpenTelemetry": {
    "ServiceName": "PumpSupervisor",
    "ServiceVersion": "1.0.0",
    "MetricsIntervalSeconds": 15,
    "MetricsStartupDelaySeconds": 5,
    "Enabled": true,
    "Exporters": {
      "Otlp": {
        "Enabled": true,
        "Endpoint": "http://localhost:4317",
        "Protocol": "Grpc"
      },
      "Jaeger": {
        "Enabled": true,
        "Endpoint": "http://localhost:4318/v1/traces",
        "Protocol": "HttpProtobuf"
      },
      "Console": {
        "Enabled": false
      }
    }
  }
}